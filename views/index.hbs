<div id="selectCategory">
  <select class="form-select">
  <option selected>全部類別</option>
  {{#each categories}}
  <option>{{ this.category }}</option>
  {{/each}}
</select>
</div>

<div id="showTotalAmount">
  <h3>總金額 : <span id="formatTotalAmount">{{ totalAmount }}</span></h3>
</div>


<div class="list-group list-group-flush" style="border: 1px;">
  {{#each records}}
  <div class="row" id="showOneItem">
    <div id="showGroup" class="col-9 mt-1 mb-1">
      {{!-- icon --}}
      <div id="showIconIncomeOrExpenses"class="col-3" style="align-self: center">
        <i id="categoryIcon"class="fas fa-question-circle fa-4x"></i>
        <div id="showIncomeOrExpenses">{{this.incomeOrExpenses}}</div>
      </div>

      <div class="col-9" id="showNameCategoryDateAmount">

        <div id="showNameCategoryDate" class="col-8">
          <div id="showNameCategory">{{this.category}} / {{this.name}}</div>
          <div id="showDate">2021-05-26</div>               
        </div>

        <div id="showAmount" class="col-4">
          <div class="list-group-item">{{this.amount}}</div>
        </div>

      </div>
    </div>

    <div class="col-3" style="align-self: center">
      <div class="btn btn-outline-success">Edit</div>
      <div class="btn btn-outline-danger">Delete</div>
    </div>

  </div>
  {{/each}}

</div>